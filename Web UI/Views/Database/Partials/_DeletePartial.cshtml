@model DeleteViewModel
@{
    string type = Model.Type.ToLower();
    string action = "DeleteItem";
    switch(type)
    {
        case "item":
            action = "DeleteItem";
            break;
        case "mob":
            action = "DeleteMob";
            break;
    }
}


<div class="p-2 me-3 container-fluid">
    <h5>Do you really want to delete <strong class="text-warning">@Model.Name</strong></h5>
    <div class="container-fluid d-flex justify-content-end gap-1">
        <a asp-action="@action" asp-route-id="@Model.ID" class="btn btn-fantasy">Yes</a>
        <a class="btn btn-fantasy modal-close">No</a>
    </div>
</div>
